grade = input("Enter the Grade: ")
salary = float(input("Enter the Salary: "))

if salary < 10000:
    bonus = salary * 0.12
else:
    if grade == "A":
        bonus = salary * 0.05
    elif grade == "B":
        bonus = salary * 0.1
    else:
        bonus = 0

total_salary = salary + bonus

print("Bonus =", bonus)
print("Total Salary =", total_salary)
